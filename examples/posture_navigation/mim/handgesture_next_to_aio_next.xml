<mapping name="HandPosture next to AIO next" xmlns="http://www.multi-access.de"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://www.multi-access.de ../../../../MINT-core/lib/MINT-core/model/mim/mint-mappings.xsd">

  <operator id="1" type="sequential">
    <observations>
      <observation id="2" interactor="Interactor.HandPosture" states="next"  process="onchange" />
      <observation id="3" interactor="Interactor.AIO" states="focused" result="aio" process="instant" />
    </observations>
    <actions>
      <event id="4" type="next" target="aio"/>
    </actions>
  </operator>
</mapping>
