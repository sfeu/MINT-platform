<mapping name="Left Button click to AIChoiceElement choose" xmlns="http://www.multi-access.de"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://www.multi-access.de ../../../MINT-core/lib/MINT-core/model/mim/mint-mappings.xsd">

  <operator id="1" type="sequential">
    <observations>
      <observation id="2" interactor="Interactor.Pointer.Mouse" name="mouse" states="left_pressed" result="mouse" process="onchange" />
      <observation id="3" interactor="Interactor.AIO.AIIN.AIINDiscrete.AIChoiceElement" states="focused" result="aic" process="instant" />
    </observations>
    <actions>
      <event id="4" type="choose" target="aic"/>
    </actions>
  </operator>

</mapping>

