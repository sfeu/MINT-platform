// Example Stylus file
// All changes are detected and automatically compiled into CSS

@import 'helpers'

// Main

#main
    position fixed
    width 100%
    height 100%
    background url('/images/mint/MINT-Logo-trans.png') no-repeat fixed center

html, body
    width 100%
    height 100%
    padding 0
    margin 0
    background-color #333333;



canvas.touch
    position: absolute;

// login prompt

#signIn
  display none
  width 700px
  text-align left
  vertical-gradient #ddd, #eee
  border 1px solid #ccc
  margin 40px auto
  padding 15px
  round 10px
  h3
    margin 0
    font-size 1.0em
    font-weight normal
  #prompt
    border none
    box-shadow inset 0 0 2px #777
    round 5px
    width 690px
    padding 5px
    margin 0



